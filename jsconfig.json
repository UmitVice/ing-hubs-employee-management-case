{
  // Enable JavaScript type checking with JSDoc types across the project
  "compilerOptions": {
    "checkJs": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "types": [],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "app-root.js"],
  "exclude": ["node_modules", "dist", "coverage", "test", "src/**/*_test.js"]
}
