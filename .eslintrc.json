{
  "root": true,
  "extends": ["eslint:recommended"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "sourceType": "module"
  },
  "env": {
    "es2020": true,
    "browser": true,
    "mocha": true
  },
  "globals": {
    "chai": "readonly"
  },
  "rules": {
    "no-unexpected-multiline": "off"
  },
  "overrides": [
    {
      "files": ["rollup.config.js", "web-test-runner.config.js"],
      "env": { "node": true }
    }
  ]
}
